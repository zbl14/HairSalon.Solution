@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="jumbotron text-center">
  <h2>Edit for @Html.DisplayFor(model => model.Name)</h2>
</div>
<div class="text-center">
  <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Back to stylist list", "Index")</button>
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</button>
  </div>
</div>
<hr />
<div>
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StylistId)
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    <button type="submit" class="btn btn-primary">Save</button> 
  }
</div>