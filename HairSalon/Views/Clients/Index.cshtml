@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="jumbotron text-center">
  <h2>Clients List</h2>
</div>
<div class="text-center">
  <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Add new client", "Create")</button>
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</button>
  </div>
</div>
<hr />
<div>
  @using (Html.BeginForm("Index","Clients",FormMethod.Get))
  {    
    <p>
      Name: @Html.TextBox("SearchString") 
      <input type="submit" value="Filter" />
    </p> 
  }
</div>
<div>
  @if (@Model.Count == 0)
  {
    <h3>No clients have been added yet!</h3>
  } 

  <table class="table">
    <thead>
      <th scope="col">Client Name</th>
      <th scope="col">Stylist Name</th>
    </thead>
    <tbody>
      @foreach(Client client in Model)
      {
        <tr>
          <td>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</td>
          <td>@client.Stylist.Name</td>
        </tr>
      }
    </tbody>
  </table>
</div>
